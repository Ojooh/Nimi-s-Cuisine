<% include includes/head %>
<body>
    
    <div class="container-fluid h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="form-box">
                <img src="/img/bg/avatar.png" class="avatar">
                <h1>LOGIN</h1>

                <form>
                    <div class="form-row">
                        <div id="error-l" class="col-12 my-3 error text-center text-danger mb-4"></div>

                        <div class="form-group col-12">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="far fa-grin-wink"></i></span>
                                </div>
                                <input type="email" class="form-control" placeholder="Username" id="username" name="username">
                            </div>
                        </div>
                
                        <div class="form-group col-12">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock-alt"></i></span>
                                </div>
                                <input type="password" class="form-control" placeholder="Password" id="password" name="password">
                            </div>
                        </div>
                    </div>
                
                    <button type="button" class="btn btn-outline-success loginBtn mt-3">Login</button>
                
                    <div class="external-links mt-3">
                        <ul>
                            <li>
                                <span class="forgot-password txt2 ">
                                    <a href="#" text-center>
                                        Forgot Password?
                                    </a>
                                </span>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="overlay"></div>
    <div class="overlay-img"></div>
<script type="module" src="/js/custom/validator.js"></script>
<script type="module" src="/js/custom/helper.js"></script>
<script type="module" src="/js/custom/script_1.js"></script>
</body>

</html>
